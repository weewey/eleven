<%= form_for @race do |f| %>

  <div class="form-group row">
    <label for="name" class="col-3 col-form-label">Race Name</label>
    <div class="col-4 input-group">
      <%= f.text_field :name, id: 'name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="race_date" class="col-3 col-form-label">Race Date</label>
    <div class="col-4 input-group">
      <%= f.date_field :start_date, id: 'start_date', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="distance" class="col-3 col-form-label">Distance</label>
    <div class="col-4 input-group">
      <%= f.text_field :distance, id: 'distance', type: 'float', min: 0, class: 'form-control' %>
      <span class="input-group-prepend input-group-addon">KM</span>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
